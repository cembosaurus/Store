using Business.Libraries.ServiceResult.Interfaces;
using Business.Management.Appsettings.Models;

namespace Business.Management.Services.Interfaces
{
    public interface IRemoteServicesInfoService
    {
        IServiceResult<string> BuildServiceURL(string serviceName, string pathName);
        IServiceResult<ServiceURL_AS> GetServiceURLByBaseURL(string baseURL);
        IServiceResult<ServiceURL_AS> GetServiceURLByName(string name);
        Task<IServiceResult<IEnumerable<ServiceURL_AS>>> LoadURLs();
        IServiceResult<IEnumerable<ServiceURL_AS>> UpdateURLs(IEnumerable<ServiceURL_AS> servicesURLs);
    }
}
